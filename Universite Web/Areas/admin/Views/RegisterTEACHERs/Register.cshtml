@model VmTeahcerRegister
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>


<h4>RegisterSTUDENT</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="admin" asp-action="Register" asp-controller="RegisterTEACHERs" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label">Email</label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
             
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RepaetPassword" class="control-label"></label>
                <input asp-for="@Model.RepaetPassword" class="form-control" />
                <span asp-validation-for="@Model.RepaetPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adı</label>
                <input asp-for="@Model.RegisterTEACHER.Name" class="form-control" />
                <span asp-validation-for="@Model.RegisterTEACHER.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Soyadı</label>
                <input asp-for="@Model.RegisterTEACHER.Surname" class="form-control" />
                <span asp-validation-for="@Model.RegisterTEACHER.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Atasının adı</label>
                <input asp-for="@Model.RegisterTEACHER.AtaAdi" class="form-control" />
                <span asp-validation-for="@Model.RegisterTEACHER.AtaAdi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Cinsi</label>
                <select asp-for="@Model.RegisterTEACHER.Gender" class="form-control">
                    <option value="kisi">Kisi</option>
                    <option value="qadin">Qadin</option>
                </select>
                <span asp-validation-for="@Model.RegisterTEACHER.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adress</label>
                <input asp-for="@Model.RegisterTEACHER.Adress" class="form-control" />
                <span asp-validation-for="@Model.RegisterTEACHER.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefon</label>
                <input type="tel" asp-for="@Model.RegisterTEACHER.Phone" class="form-control" />
                <span asp-validation-for="@Model.RegisterTEACHER.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Doğum tarixi</label>
                <input type="date" asp-for="@Model.RegisterTEACHER.DateOfBirth" class="form-control" />
                <span asp-validation-for="@Model.RegisterTEACHER.DateOfBirth" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Fakulte</label>
                <select class="form-control" asp-for="@Model.RegisterTEACHER.SubjectId" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>